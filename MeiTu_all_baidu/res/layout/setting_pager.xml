<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/basetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:padding="5dip">

                <TextView
                    android:layout_width="@dimen/base_text_w"
                    android:layout_height="wrap_content"
                    android:text="@string/pingjia"
                    android:textColor="@color/black_01"
                    android:textSize="@dimen/setting_text_size" />

                <LinearLayout
                    android:id="@+id/showErrorLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/show_error_selector"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/showErrorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/content_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basetitle"
                android:background="@drawable/test_center_black_selector"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:id="@+id/la_ding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_top_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/ding"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:id="@+id/view_guanzhu"
                    android:layout_height="1px"
                    android:background="@color/frame_line" />
                <LinearLayout
                    android:id="@+id/la_guanzhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_center_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_tmpguanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="关注我们"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:id="@+id/view_fenxiang"
                    android:layout_height="1px"
                    android:background="@color/frame_line" />
                <LinearLayout
                    android:id="@+id/la_fenxiang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_center_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="分享我们"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:id="@+id/view_tuijian"
                    android:layout_height="1px"
                    android:background="@color/frame_line" />
                <LinearLayout
                    android:id="@+id/la_tuijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_center_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="精品推荐"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/frame_line" />
                <LinearLayout
                    android:id="@+id/la_cai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_buttom_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="反馈"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout_base"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精品"
                    android:textColor="@color/black_01"
                    android:textSize="@dimen/setting_text_size" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jingpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/la_huanyuan"
                android:background="@drawable/test_center_black_selector"
                android:orientation="vertical"
                android:padding="@dimen/padding"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/la_jingpin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_radius_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="精品推荐"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gaojiSettingLayout_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/la_huanyuan"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dip"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="操作"
                    android:textColor="@color/black_01"
                    android:textSize="@dimen/setting_text_size" />

                <TextView
                    android:id="@+id/single_call"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_tujian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gaojiSettingLayout_call"
                android:background="@drawable/test_center_black_selector"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:id="@+id/la_xiongdi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_top_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/xiongdi"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/frame_line" />

                <LinearLayout
                    android:id="@+id/la_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_buttom_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="检查更新"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_huanyuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/la_tujian"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dip"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缓存"
                    android:textColor="@color/black_01"
                    android:textSize="@dimen/setting_text_size" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/huanyuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/la_huanyuan"
                android:background="@drawable/test_center_black_selector"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:id="@+id/la_re"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/la_item_radius_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="@dimen/content_item_h"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="清除缓存"
                            android:textColor="#000000"
                            android:textSize="@dimen/center_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/set_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/duoduo"
                android:textColor="@color/black_01"
                android:textSize="@dimen/center_edt_end_hint_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>