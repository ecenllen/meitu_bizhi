<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/show_content_bg"
        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:text="点击右上角(关注)按钮进行关注，以下是教程"
    android:textSize="28dp"
    android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="1.点击右上角(关注)按钮进，如果您装了微信，则进行第二步；否则请先安装微信！"
            android:textSize="18dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="2.点击右上角发送按钮，如下图所示"
            android:textSize="18dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pengyouquanfasong" />
        <TextView
            android:layout_width="wrap_content"
            android:text="3.进入微信朋友圈，点击二维码图片"
            android:textSize="18dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dianjierweimatupian" />
        <TextView
            android:layout_width="wrap_content"
            android:text="4.长按二维码图片"
            android:textSize="18dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/changanerweima" />
        <TextView
            android:layout_width="wrap_content"
            android:text="5.点击(识别图中二维码)"
            android:textSize="18dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/shibieerweima" />
        <TextView
            android:layout_width="wrap_content"
            android:text="6.点击关注按钮，如图所示"
            android:textSize="18dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/guanzhugzh" />
    </LinearLayout>
</ScrollView>
